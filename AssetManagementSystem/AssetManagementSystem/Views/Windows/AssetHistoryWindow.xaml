<Window x:Class="AssetManagementSystem.Views.Windows.AssetHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="История изменений" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <DataGrid ItemsSource="{Binding History}" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding ChangedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                <DataGridTextColumn Header="Поле" Binding="{Binding ChangedField}"/>
                <DataGridTextColumn Header="Старое значение" Binding="{Binding OldValue}"/>
                <DataGridTextColumn Header="Новое значение" Binding="{Binding NewValue}"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding ChangedBy.FullName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>