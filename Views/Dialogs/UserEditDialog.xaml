<Window x:Class="AssetManagementSystem.Views.Dialogs.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="18" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Margin="0 16">
            <TextBox materialDesign:HintAssist.Hint="Логин" 
                     Text="{Binding User.Username, UpdateSourceTrigger=PropertyChanged}"/>

            <PasswordBox materialDesign:HintAssist.Hint="{Binding PasswordHint}"
                         Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 8"/>

            <TextBox materialDesign:HintAssist.Hint="ФИО" 
                     Text="{Binding User.FullName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 8"/>

            <ComboBox materialDesign:HintAssist.Hint="Роль"
                      ItemsSource="{Binding Roles}"
                      SelectedValue="{Binding User.RoleId}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0 8"/>

            <CheckBox Content="Активен" 
                      IsChecked="{Binding User.IsActive}"
                      Margin="0 8"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100"/>
            <Button Content="Отмена" IsCancel="True" Margin="8 0 0 0" Width="100"/>
        </StackPanel>
    </Grid>
</Window>