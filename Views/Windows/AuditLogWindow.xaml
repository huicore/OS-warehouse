<Window x:Class="AssetManagementSystem.Views.Windows.AuditLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Журнал аудита" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <DataGrid ItemsSource="{Binding LogEntries}" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Время" Binding="{Binding Timestamp, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Username}"/>
                <DataGridTextColumn Header="Действие" Binding="{Binding Action}" Width="*"/>
                <DataGridTextColumn Header="Детали" Binding="{Binding Details}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>