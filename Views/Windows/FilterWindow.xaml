<Window x:Class="AssetManagementSystem.Views.Windows.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Фильтр" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Фильтрация основных средств" 
                   FontSize="16" FontWeight="Bold" Margin="0 0 0 16"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Основные параметры" Margin="0 0 0 16">
                    <StackPanel>
                        <TextBox materialDesign:HintAssist.Hint="Инвентарный номер" 
                                 Text="{Binding InventoryNumberFilter, UpdateSourceTrigger=PropertyChanged}"/>

                        <ComboBox materialDesign:HintAssist.Hint="Тип ОС"
                                  ItemsSource="{Binding AssetTypes}"
                                  SelectedValue="{Binding SelectedAssetTypeId}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  Margin="0 8"/>

                        <TextBox materialDesign:HintAssist.Hint="Наименование" 
                                 Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0 8"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Дополнительные параметры">
                    <StackPanel>
                        <ComboBox materialDesign:HintAssist.Hint="Статус"
                                  ItemsSource="{Binding Statuses}"
                                  SelectedItem="{Binding SelectedStatus}"
                                  Margin="0 0 0 8"/>

                        <DatePicker materialDesign:HintAssist.Hint="Дата постановки от"
                                    SelectedDate="{Binding PurchaseDateFrom}"
                                    Margin="0 8"/>

                        <DatePicker materialDesign:HintAssist.Hint="Дата постановки до"
                                    SelectedDate="{Binding PurchaseDateTo}"
                                    Margin="0 8"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 16 0 0">
            <Button Content="Сбросить" Command="{Binding ResetCommand}" Width="100"/>
            <Button Content="Применить" Command="{Binding ApplyCommand}" Margin="8 0 0 0" Width="100"/>
        </StackPanel>
    </Grid>
</Window>